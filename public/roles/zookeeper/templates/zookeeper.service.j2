#!/bin/bash  
#chkconfig:2345 20 90  
#description:zookeeper  
#processname:zookeeper  
export JAVA_HOME={{ java_home }}
export PATH=$JAVA_HOME/bin:$PATH  
case $1 in  
          start)su root {{ software_install_path}}/zookeeper-{{ zookeeper_version }}/bin/zkServer.sh start;;  
          stop)su root {{ software_install_path}}/zookeeper-{{ zookeeper_version }}/bin/zkServer.sh stop;;  
          status)su root {{ software_install_path}}/zookeeper-{{ zookeeper_version }}/bin/zkServer.sh status;;  
          restart)su root {{ software_install_path}}/zookeeper-{{ zookeeper_version }}/bin/zkServer.sh restart;;  
          *)  echo "require start|stop|status|restart"  ;;  
esac  
